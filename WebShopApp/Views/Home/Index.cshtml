﻿@{
    ViewData["Title"] = "Home Page";
}



<style>
    body {
        background-color: #f5f5f5;
    }

    .category-card img {
        height: 160px;
        object-fit: cover;
    }

    .product-card img {
        height: 200px;
        object-fit: contain;
        padding: 10px;
    }

    .category-card {
        transition: transform 0.2s ease;
    }

        .category-card:hover {
            transform: translateY(-5px);
        }

        .category-card img {
            height: 160px;
            object-fit: contain;
